<?xml version="1.0" encoding="utf-8"?>
<com.mobileplay.view.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ff3097fd"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView

        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_topbanner_logo"/>

    <TextView
        android:id="@+id/tv_search"
        android:drawableLeft="@drawable/tv_search_selector"
        android:drawablePadding="3dp"
        android:background="@drawable/tv_bg_search_selector"
        android:textColor="@color/tv_tc_search_selector"
        android:clickable="true"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:text="全网搜索"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       >

<!--        <TextView-->
<!--            android:id="@+id/tv_game"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:drawableLeft="@drawable/ic_topbanner_game" />-->
        <ImageView
            android:id="@+id/iv_game"
             android:src="@drawable/ic_topbanner_game"
              android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_alignRight="@+id/iv_game"
            android:background="@drawable/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_record"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_topbanner_record"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.mobileplay.view.TitleBar>